<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Goal views -->
    <record id="goal_list_action" model="ir.actions.act_window">
        <field name="name">Objectifs</field>
        <field name="res_model">sale.goal.report</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_group_by_user': True, 'search_default_group_by_goal': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
            <p>
            </p>
        </field>
    </record>

    <record id="goal_list_view" model="ir.ui.view">
        <field name="name">Liste des objectifs</field>
        <field name="model">sale.goal.report</field>
        <field name="arch" type="xml">
            <tree string="Liste des objectifs" create="false">
                <field name="year_id" invisible="1"/>
                <field name="goal_id" invisible="1"/>
                <field name="period_id" invisible="1"/>
                <field name="team_id" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="target_goal_volume"/>
                <field name="target_goal_value"/>
                <!--<field name="current_goal_volume"/>-->
                <field name="current_goal_value"/>
                <!--<field name="rate_goal_volume"/>-->
                <!--<field name="rate_goal_value"/>-->
                <!--<field name="rate_goal_productivity"/>-->
            </tree>
        </field>
    </record>


    <record id="goal_search_view" model="ir.ui.view">
        <field name="name">Rechercher des objectifs</field>
        <field name="model">sale.goal.report</field>
        <field name="arch" type="xml">
            <search string="Rechercher des objectifs">
                <filter name="my" string="Mes objectifs" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter name="inprogress" string="En cours"
                        domain="[
                                ('end_date', '>=', context_today().strftime('%%Y-%%m-%%d'))
                    ]"/>
                <filter name="closed" string="Fait"
                        domain="[
                        '|',
                            ('end_date', '=', False),
                            ('end_date', '&lt;', context_today().strftime('%%Y-%%m-%%d'))
                    ]"/>
                <separator/>

                <field name="user_id"/>
                <field name="goal_id"/>
                <field name="year_id"/>
                <field name="period_id"/>
                <group expand="0" string="Regrouper par">
                    <filter name="group_by_year" string="Exercice commercial" domain="[]"
                            context="{'group_by':'year_id'}"/>
                    <filter name="group_by_period" string="PÃ©riode commerciale" domain="[]"
                            context="{'group_by':'period_id'}"/>
                    <filter name="group_by_team" string="Equipe commerciale" domain="[]"
                            context="{'group_by':'team_id'}"/>
                    <filter name="group_by_user" string="Commercial" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter name="group_by_goal" string="Objectif" domain="[]" context="{'group_by':'goal_id'}"/>
                    <filter string="Date de fin" name="enddate" domain="[]" context="{'group_by':'end_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="goal_kanban_view" model="ir.ui.view">
        <field name="name">Goal Kanban View</field>
        <field name="model">sale.goal.report</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey" create="false">
                <field name="year_id"/>
                <field name="goal_id"/>
                <field name="period_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="target_goal_volume"/>
                <field name="target_goal_value"/>
                <!--<field name="current_goal_volume"/>-->
                <field name="current_goal_value"/>
                <!--<field name="rate_goal_volume"/>-->
                <!--<field name="rate_goal_value"/>-->
                <!--<field name="rate_goal_productivity"/>-->
                <templates>
                    <t t-name="kanban-tooltip">
                        <ul class="oe_kanban_tooltip">
                            <li>
                                <t t-esc="record.definition_description.value"/>
                            </li>
                        </ul>
                    </t>
                    <t t-name="kanban-box">
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem
            id="goals_report_menu"
            name="Objectifs"
            groups="sales_team.group_sale_manager"
            parent="crm.crm_menu_report"
            action="goal_list_action"
            sequence="4"/>


</odoo>
