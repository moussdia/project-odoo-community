<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit quotation report (from module sale) -->
        <template id="report_quotation_template_inherit" inherit_id="sale.report_saleorder_document">
            <!--<xpath expr="//div[@class='page']" position="replace">-->
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="sale_crm_extension.external_sale_order_report_layout">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                    <t t-set="address">
                        <div t-field="doc.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>:
                            <span t-field="doc.partner_id.vat"/>
                        </p>
                    </t>
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id                              and doc.partner_invoice_id != doc.partner_id                              or doc.partner_shipping_id != doc.partner_invoice_id">
                        <t t-set="information_block">
                            <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and Shipping
                                Address:
                            </strong>
                            <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing Address:</strong>
                            <div t-field="doc.partner_invoice_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                <strong>Shipping Address:</strong>
                                <div t-field="doc.partner_shipping_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </t>
                        </t>
                    </t>


                    <div class="row" style="margin-top:20px; margin-bottom:20px ;font-size:12px;font-family:serif">
                        <div class="col-3">
                            <div class="col-auto col-3 mw-100 mb-2">
                                <strong>Référence</strong>
                                <p class="m-0" t-field="doc.name"/>
                            </div>
                        </div>
                        <div class="col-3">
                            <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                <strong>Date</strong>
                                <p class="m-0" t-field="doc.date_order"/>
                            </div>
                        </div>
                        <div class="col-3">
                            <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                <strong>Commercial</strong>
                                <p class="m-0" t-field="doc.user_id"/>
                            </div>
                        </div>
                        <div class="col-3">
                            <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                <strong>Durée de validité</strong>
                                <p class="m-0" t-field="doc.validity_date"/>
                            </div>
                        </div>
                    </div>

                    <table class="table">
                        <thead style="background-color:#2E8B57; color:black">
                            <tr>
                                <th style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    Désignation / Service
                                </th>
                                <th style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    Quantité
                                </th>
                                <th style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    Prix unitaire
                                </th>
                                <th style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    Montant HT
                                </th>
                                <th style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    Remise
                                </th>
                                <th style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    Total HT
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                            <span t-field="line.product_uom_qty"/>
                                        </td>
                                        <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                            <span t-field="line.price_subtotal"
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    LIBELLE :
                                    <strong t-field="doc.wording"/>
                                </td>
                                <td rowspan="2"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                                <td rowspan="2"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                                <td rowspan="2"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                                <td rowspan="2"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                                <td rowspan="2"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    FM DU :
                                    <strong t-field="doc.fm"/>
                                </td>
                            </tr>
                            <tr>
                                <td rowspan="1"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;">
                                    FRAIS TECHNIQUE
                                </td>
                                <td colspan="3"
                                    style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;">
                                    <span t-field="doc.technical_fees"/>%
                                </td>
                                <td
                                        style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;">
                                </td>
                                <td
                                        style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                    <span t-field="doc.technical_fees_ttc"/>
                                    CFA
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: left;"></td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;">
                                </td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;">
                                </td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;">
                                </td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: center;"></td>
                            </tr>
                            <tr>
                                <td colspan="5" style="font-size: 12px; font-family: Arial; text-align: right;">
                                    <strong>TOTAL HT</strong>
                                </td>
                                <td style="background-color:#D3D3D3; border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                    <strong>
                                        <span t-field="doc.total_amount_ht"/>
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="5" style="font-size: 12px; font-family: Arial; text-align: right;">TVA
                                    18%
                                </td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                    <span t-field="doc.total_amount_tax"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="5" style="font-size: 12px; font-family: Arial; text-align: right;">TSP 3%
                                </td>
                                <td style="border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                    <span t-field="doc.tsp"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="5" style="font-size: 12px; font-family: Arial; text-align: right;">
                                    <strong>TOTAL TTC</strong>
                                </td>
                                <td style="background-color:#FFD700; border: 1px solid black; font-size: 12px; font-family: Arial; text-align: right;">
                                    <strong>
                                        <span t-field="doc.total_amount_ttc"/>
                                    </strong>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                    <br/>
                    <p style="font-size:12px;font-family:serif;">Arrêté la présente Facture Proforma à la somme de :
                        <span style="font-size:15px;font-family:serif;" t-field="doc.text_amount"/>
                        <![CDATA[&nbsp;]]> FCA
                    </p>

                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-12" style="">
                            <table class="table">
                                <tr align="left" style="margin-top:10px">
                                    <td style="width: 100%; border: 2px solid black; font-size: 15px; font-family:serif; font-weight:bold; text-align: left;">
                                        Conditions de règlement :
                                        <span style="color:red; font-size: 15px; font-family:serif; font-weight:bold"
                                              t-field="doc.payment_condition">
                                            <span t-field="doc.payment_condition"/>
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <div style="font-size:12px;font-family:serif; margin-left:300px">
                        <strong>FRATERNITE MATIN</strong>
                        vous remercie pour votre confiance
                    </div>
                    <br/>
                </t>
            </xpath>

        </template>
    </data>
</odoo>