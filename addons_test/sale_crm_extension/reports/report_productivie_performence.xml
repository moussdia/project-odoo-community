<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_productivite_performance">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <style type="text/css">
                            .info_client table tr td{ border:1; }
                            td{padding: 4px;}
                            div#titre {
                            font-size: 18px;
                            color: #00008B;
                            font-family: "Times New Roman", Arial;
                            }

                            div#annee {
                            font-size: 20px;
                            font-family: "Times New Roman", Arial;
                            }

                            table {
                            border-collapse: collapse;
                            width: 100%;
                            font-size: 20px;
                            font-family: "Times New Roman", Arial;
                            border-radius: 10px;
                            border: 0px;
                            }

                            th {
                            border: 1px;
                            text-align: left;
                            background-color: #E6ECEB;
                            height: 20px;
                            }

                            td {
                            border: 1px;
                            margin: 0px;
                            padding-left: 5px;
                            padding-right: 5px;
                            }
                            hr {
                            height: 1px;
                            color: #000;
                            background-color: #000;
                            }
                            .table2{
                            display: block;
                            float: left;
                            width: 50%;
                            }
                        </style>
                        <div class="info_header" style="margin-bottom: 20px;">
                            <table style="width: 100%; border: none">
                                <tr style="border: none;">
                                    <td style="width: 30%">
                                        <!--<img style="width: 270px; height: 90px"-->
                                        <!--t-attf-src="data:image/*;base64,{{o.logo}}"/>-->
                                    </td>
                                    <td style="">
                                    </td>
                                    <td style="">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <br/>

                        <table>
                            <tr style="font-family: Arial; text-align: center; font-size:25px">
                               <td>Productivité et performance</td>
                            </tr>
                        </table>
                        <br/>

                        <table>
                            <tr style="background-color: #2E8B57">
                                <td rowspan="1" style="border: 1px solid black; font-size: 25px; font-family: Arial; text-align: center;">Leviers</td>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: center;">Critères de performance</td>
                            </tr>
                            <tr>
                                <td rowspan="4" style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Activité</td>

                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de visites clients: <span style="font-weight:bold" t-field="o.number_of_customer_visits"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Écart entre nombre de visites et réalisations: <span style="font-weight:bold" /></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de visites par segment de clientèle: <span style="font-weight:bold"/><br/>
                                - Gros clients : <span style="font-weight:bold" t-field="o.big_customer_docs"/><br/>
                                - Clients moyens : <span style="font-weight:bold" t-field="o.middle_customer_docs"/><br/>
                                - Petit clients : <span style="font-weight:bold" t-field="o.small_customer_docs"/><br/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de visites de prospection: <span style="font-weight:bold" />
                                <span style="font-weight:bold" t-field="o.number_of_prospecting_visits"/>
                                </td>
                            </tr>

                            <tr>
                                <td rowspan="6" style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Portefeuille clients</td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de clients actifs: <span style="font-weight:bold" t-field="o.number_of_active_clients"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de prospects: <span style="font-weight:bold" t-field="o.number_of_prospects"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de clients par segment : <br/>
                                    - Gros clients : <span style="font-weight:bold" t-field="o.big_customer"/><br/>
                                    - Clients moyens : <span style="font-weight:bold" t-field="o.medium_customer"/><br/>
                                    - Petit clients : <span style="font-weight:bold" t-field="o.small_customer"/><br/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de nouveaux clients: <span style="font-weight:bold" t-field="o.number_of_new_clients"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Chiffre d’Affaires des nouveaux clients: <span style="font-weight:bold" t-field="o.ca_of_new_clients"/></td>
                            </tr>
                            <tr>
                                <td rowspan="3" style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Affaires</td>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre d’affaires: <span style="font-weight:bold" t-field="o.number_of_cases"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Montant moyen des affaires: <span style="font-weight:bold" t-field="o.average_amount_of_business"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Taux de transformation d’un projet en affaires: <span style="font-weight:bold" t-field="o.rate_of_transformation_of_project_into_business"/>%</td>

                            </tr>
                            <tr>
                                <td rowspan="2" style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Promotion des ventes</td>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre d’actions promotionnelles: <span style="font-weight:bold" /></td>

                            </tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Poids des promotions dans le total du Chiffre d’Affaires: <span style="font-weight:bold" /></td>
                            <tr>
                            </tr>
                            <tr>
                                <td rowspan="3" style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Gestion/qualité</td>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Nombre de litiges: <span style="font-weight:bold" />
                                 <span style="font-weight:bold" t-field="o.number_of_disputes"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Montant des impayés: <span style="font-weight:bold" />
                                <span style="font-weight:bold" t-field="o.amount_of_unpaid_bills"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; font-size: 20px; font-family: Arial; text-align: left;">Délai de règlement: <span style="font-weight:bold" /></td>
                            </tr>
                        </table>
                        <br/>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>