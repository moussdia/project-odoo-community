<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_display_type_tree_view" model="ir.ui.view">
			<field name="name">utm.display.type.tree</field>
			<field name="model">utm.display.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Type sous média" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="media_type_id" required="1"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_display_type_menu" model="ir.actions.act_window">
            <field name="name">Type sous média</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.display.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Type sous média
                </p>
            </field>
        </record>

         <menuitem id="utm_media_menu"
                  name="Média"
                  parent="survey_configuration_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="7"
        />
         <menuitem id="utm_display_type_menu"
                  name="Type sous média"
                  parent="utm_media_menu"
                  action="action_utm_display_type_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="1"
        />

    </data>
</odoo>
