<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_town_tree_view" model="ir.ui.view">
			<field name="name">utm.town.tree</field>
			<field name="model">utm.town</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Ville" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
					<field name="country_id" required="1"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_town_menu" model="ir.actions.act_window">
            <field name="name">Ville</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.town</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Ville
                </p>
            </field>
        </record>

         <menuitem id="utm_town_under_menu"
                  name="Ville"
                  parent="utm_region_menu"
                  action="action_utm_town_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="17"
        />

    </data>
</odoo>
