<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_partner_tree_view" model="ir.ui.view">
			<field name="name">utm.partner.tree</field>
			<field name="model">utm.partner</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Partenaire" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_partner_menu" model="ir.actions.act_window">
            <field name="name">Partenaire</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Partenaire
                </p>
            </field>
        </record>

         <menuitem id="utm_partner_menu"
                  name="Partenaire"
                  parent="survey_configuration_menu"
                  action="action_partner_menu"
                  groups="sale_crm_extension.group_marketing"
        />

    </data>
</odoo>
