<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_target_under_category_tree_view" model="ir.ui.view">
			<field name="name">utm.target.under.category.tree</field>
			<field name="model">utm.target.under.category</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sous categorie" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="target_category_id" required="1"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_target_under_category_menu" model="ir.actions.act_window">
            <field name="name">Sous categorie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.target.under.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Sous categorie
                </p>
            </field>
        </record>

         <menuitem id="utm_target_under_category_menu"
                  name="Sous categorie"
                  parent="utm_target_menu"
                  action="action_utm_target_under_category_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="3"
        />

    </data>
</odoo>
