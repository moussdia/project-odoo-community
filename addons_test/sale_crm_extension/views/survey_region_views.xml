<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_region_tree_view" model="ir.ui.view">
			<field name="name">utm.region.tree</field>
			<field name="model">utm.region</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Région" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_region_menu" model="ir.actions.act_window">
            <field name="name">Région</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.region</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Région
                </p>
            </field>
        </record>

         <menuitem id="utm_region_menu"
                  name="Caracteristique géographique"
                  parent="survey_configuration_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="10"
        />
         <menuitem id="utm_region_under_menu"
                  name="Région"
                  parent="utm_region_menu"
                  action="action_utm_region_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="1"
        />

    </data>
</odoo>
