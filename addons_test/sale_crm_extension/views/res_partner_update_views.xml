<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!--ADD THEME Action Menu Tree view -->
        <record id="res_partner_update_tree_view" model="ir.ui.view">
            <field name="name">res.partner.update.tree</field>
            <field name="model">res.partner.update</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Partner Update">
                    <field name="ref"/>
                    <field name="name"/>
                    <field name="website"/>
                    <field name="street"/>
                </tree>
            </field>
        </record>
        <!-- Action Menu Form view -->
        <record id="res_partner_update_form_view" model="ir.ui.view">
            <field name="name">res.partner.update.form</field>
            <field name="model">res.partner.update</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Partner Update" version="7.0" duplicate="0" delete="0">
                    <header>
                        <button name="%(sale_crm_extension.action_update_wizard)d"
                                string="Mettre Ã  jour les contacts"
                                type="action" class="oe_highlight"
                                groups="sale_crm_extension.group_commercial"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="ref"/>
                                <field name="name"/>
                                <field name="website"/>
                                <field name="street"/>
                                <field name="city"/>
                                <field name="mobile"/>
                            </group>
                        </group>
                        <group>
                            <field name="partner_phone"/>
                            <field name="phone"/>
                            <field name="partner_mobile"/>
                            <field name="function"/>
                            <field name="partner_name"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_res_partner_update_menu" model="ir.actions.act_window">
            <field name="name">Partner Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.update</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Partner Update
                </p>
            </field>
        </record>


        <menuitem id="res_partner_update_menu"
                  name="Partner Update"
                  parent="sale.menu_sale_config"
                  action="action_res_partner_update_menu"
                  sequence="76"/>

    </data>
</openerp>

