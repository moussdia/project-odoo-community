<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_diffusion_type_tree_view" model="ir.ui.view">
			<field name="name">utm.diffusion.type.tree</field>
			<field name="model">utm.diffusion.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Type de diffusion" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
					<field name="media_type" required="1"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_diffusion_type_menu" model="ir.actions.act_window">
            <field name="name">Type de diffusion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.diffusion.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Type de diffusion
                </p>
            </field>
        </record>

         <menuitem id="utm_diffusion_type_menu"
                  name="Type de diffusion"
                  parent="survey_configuration_menu"
                  action="action_utm_diffusion_type_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="5"
        />

    </data>
</odoo>
