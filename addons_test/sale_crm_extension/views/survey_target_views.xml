<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_target_tree_view" model="ir.ui.view">
			<field name="name">utm.target.tree</field>
			<field name="model">utm.target</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Cible" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_target_menu" model="ir.actions.act_window">
            <field name="name">Cible</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.target</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Cible
                </p>
            </field>
        </record>

        <menuitem id="utm_target_menu"
                  name="Cible"
                  parent="survey_configuration_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="8"
        />
        <menuitem id="utm_target_under_menu"
                  name="Cible"
                  parent="utm_target_menu"
                  action="action_utm_target_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="1"
        />

    </data>
</odoo>
