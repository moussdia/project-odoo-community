<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="survey_strategy_tree_view" model="ir.ui.view">
			<field name="name">utm.strategy.tree</field>
			<field name="model">utm.strategy</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Strategie" editable="bottom" default_order="id desc">
					<field name="strategy" required="1"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_survey_strategy_menu" model="ir.actions.act_window">
            <field name="name">Strategie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.strategy</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Strategie
                </p>
            </field>
        </record>

        <menuitem id="survey_configuration_menu"
                  name="Configuration"
                  parent="survey.menu_surveys"
                  sequence="200"
                  groups="sale_crm_extension.group_marketing"
        />

         <menuitem id="survey_strategy_menu"
                  name="Strategie"
                  parent="survey_configuration_menu"
                  action="action_survey_strategy_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="1"
        />

    </data>
</odoo>
