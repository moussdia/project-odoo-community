<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!--ADD THEME Action Menu Tree view -->
        <record id="sale_periodicity_tree_view" model="ir.ui.view">
            <field name="name">sale.periodicity.tree</field>
            <field name="model">sale.periodicity</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Période commerciale" default_order="id desc">
                    <field name="year_id"/>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>
        <!-- Action Menu Form view -->
        <record id="sale_periodicity_form_view" model="ir.ui.view">
            <field name="name">sale.periodicity.form</field>
            <field name="model">sale.periodicity</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Période commerciale" version="7.0" duplicate="0" delete="0">
                    <header>
                        <button name="action_validate" states="draft"
                                string="Valider"
                                type="object" class="oe_highlight"/>

                        <button name="action_close" string="Clôturer"
                                type="object" class="oe_highlight" states="open"/>

                        <button name="action_draft" string="Mettre en brouillon"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '=', 'draft')]}"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,open,close"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="year_id" required="1"/>
                                <field name="name" required="1"/>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_sale_periodicity_menu" model="ir.actions.act_window">
            <field name="name">Période commerciale</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.periodicity</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer votre première période commerciale
                </p>
            </field>
        </record>


        <menuitem id="sale_periodicity_menu"
                  name="Période commerciale"
                  parent="sale_year_principal_menu"
                  action="action_sale_periodicity_menu"
                  sequence="2"
                  groups="sale_crm_extension.group_chef_service_commercial"
                  />

    </data>
</openerp>

