<odoo>
    <data>

        <record id="survey_campaign_tree_view" model="ir.ui.view">
            <field name="name">survey.campaign.tree</field>
            <field name="model">survey.campaign</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Campagne">
                    <field name="name"/>
                    <field name="media_plan"/>
                    <field name="type_of_media_id"/>
                </tree>
            </field>
        </record>

        <record id="survey_campaign_form_view" model="ir.ui.view">
            <field name="name">survey.campaign.form</field>
            <field name="model">survey.campaign</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Campagne" duplicate="0" delete="0">
                    <header>
                        <button name="action_submit" string="Brouillon"
                                type="object" class="oe_highlight" attrs="{'invisible':[('status','!=','draft')]}"
                        groups="sale_crm_extension.group_marketing"/>

                        <button name="action_planned" string="Planifier"
                                type="object" class="oe_highlight" attrs="{'invisible':[('status','!=','planned')]}"/>
                        <button name="action_return" string="Mettre au brouillon" type="object" class="oe_highlight"
                                attrs="{'invisible':[('status','!=','planned')]}" groups="sale_crm_extension.group_marketing"/>

                        <button name="action_executed" string="Exécuter"
                                type="object" class="oe_highlight" groups="sale_crm_extension.group_marketing"
                        attrs="{'invisible':[('status','!=','executed')]}"/>
                        <button name="action_return" string="Retourner"
                                type="object" class="oe_highlight" groups="sale_crm_extension.group_marketing"
                        attrs="{'invisible':[('status','!=','executed')]}"/>

                        <button name="action_checked" string="Terminer"
                                type="object" class="oe_highlight" groups="sale_crm_extension.group_marketing"
                        attrs="{'invisible':[('status','!=','checked')]}"/>
                        <button name="action_return" string="Retourner"
                                type="object" class="oe_highlight" groups="sale_crm_extension.group_marketing"
                        attrs="{'invisible':[('status','!=','checked')]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,planned,executed,checked,done"/>
                    </header>
                    <sheet>
                    <div class="oe_title">
                        <label for="media_plan" class="oe_edit_only" style="font-weight: bold;"/>
                        <h1>
                            <field name="media_plan" required="1" string="Type de communication"
                                   placeholder="Type de communication"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_of_media_id" attrs="{'invisible':[('media_plan','=', 'out_media')],
                            'required':[('media_plan','!=', 'out_media')]}" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="target_media_id" attrs="{'invisible':[('media_plan','=', 'out_media')],
                            'required':[('media_plan','!=', 'out_media')]}" options="{'no_quick_create': True, 'no_create_edit' : True}" widget="many2many_tags"/>
                            <field name="type_of_out_media_id" attrs="{'invisible':[('media_plan','!=', 'out_media')],
                            'required':[('media_plan','=', 'out_media')]}" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="diffusion_type_id" widget="many2many_tags" attrs="{'invisible':[('media_plan','=', 'out_media')]}" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="name" required="1"/>
                            <field name="products_ids" widget="many2many_tags" required="1"/>
                            <field name="location" attrs="{'invisible':[('media_plan','=', 'media')],
                            'required':[('media_plan','!=', 'media')]}"/>
                            <field name="logistics" widget="many2many_tags" attrs="{'invisible':[('media_plan','=', 'media')]}"/>
                        </group>
                        <group>
                            <field name="amount_total" string="Budget estimatif" readonly="1"/>
                            <field name="total_spending" string="Dépense réalisée" readonly="1"/>
                            <field name="start_date" required="1"/>
                            <field name="and_date" required="1"/>
                            <field name="recipients_mails" invisible="1"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Cible">
                            <group>
                                <group>
                                    <field name="target_id" required="1" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                    <field name="target_category_id" required="1" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                </group>
                                <group>
                                     <field name="target_under_category_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Partenariat">
                            <group>
                                <field name="partner_ids" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Budget">
                            <group>
                                <field name="expense_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="nature_id" required="1"/>
                                        <field name="amount" required="1"/>
                                        <field name="amount_realized" required="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group class="oe_subtotal_footer oe_right" style="margin-right: 50px">
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="total_spending" string="Total réalisé" nolabel="1"
                                       class="oe_subtotal_footer_separator"
                                       widget="monetary"/>
                            </group>
                        </page>
                        <page string="Résultats attendus">
                            <group>
                                <group>
                                    <field name="turnover" required="1"/>
                                    <field name="margin" required="1"/>
                                </group>
                                <group>
                                    <field name="opex" required="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Suspects" attrs="{'invisible':[('status','in',('draft','planned'))]}">
                            <group>
                                <button name="%(sale_crm_extension.action_create_lead_wizard)d"
                                            context="{'default_survey_campaign_id': active_id}"
                                            string="Fournir les suspects aux commerciaux"
                                            type="action" class="oe_highlight"
                                            attrs="{'invisible':[('status', '!=', 'done')]}"
                                            groups="sale_crm_extension.group_chef_service_commercial"/>
                            </group>
                            <group>
                                <field name="survey_suspect_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="contact"/>
                                        <field name="email"/>
                                        <field name="address"/>
                                        <field name="city"/>
                                        <field name="function"/>
                                        <field name="attribute" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_survey_campaign" model="ir.actions.act_window">
            <field name="name">Campagne</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">survey.campaign</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Campagne
                </p>
            </field>
        </record>

        <menuitem id="utm_campaign_menu"
                  name="Campagne"
                  parent="survey.menu_surveys"
                  action="action_survey_campaign"
                  sequence="120"
                  groups="sale_crm_extension.group_marketing,sale_crm_extension.group_commercial"

        />

    </data>
</odoo>