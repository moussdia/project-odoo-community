<odoo>
    <data>

        <record id="sale_order_form_view_form" model="ir.ui.view">
            <field name="name">sale.order.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']"
                       position="after">
                    <field name="quality_of_service"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='discount']"
                       position="attributes">
                    <attribute name="string">Remise</attribute>
                </xpath>

                <xpath expr="//field[@name='require_signature']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='require_payment']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="technical_fees"/>
                    <field name="applicable_tsp"/>
                    <field name="rigor" invisible="1"/>
                    <field name="payment_condition"/>
                    <field name="recipients_mails" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="team_id"/>
                    <field name="user_id" string="Commercial"/>
                    <field name="year_id" options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="period_id"
                           domain="[('year_id', '=', year_id), ('state', '=', 'open')]"
                           options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="lead_id" invisible="1"/>
                    <field name="lead_state" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='amount_untaxed']" position="replace">
                    <field name="total_amount_ht"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/group/group[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/group/group[1]" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2">
                        <field name="total_amount_ht" widget="monetary"/>
                        <field name="total_amount_tax" widget="monetary"/>
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="total_amount_ttc"/>
                        </div>
                        <field name="total_amount_ttc" nolabel="1" class="oe_subtotal_footer_separator"
                               widget="monetary"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="wording"/>
                    <field name="fm"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="estimated_order_date"/>
                    <field name="discount" invisible="1"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="responsible_discount" invisible="1"/>
                </xpath>

                <notebook position="inside">
                    <page string="Commentaire">
                        <group>
                            <field name="comments" nolabel="1"/>
                        </group>
                    </page>
                </notebook>

                <xpath expr="//button[@name='action_quotation_send']" position="replace">
                    <button name="action_submit_for_validation" string="Soumettre pour validation" type="object"
                            states="draft"
                            class="btn-primary"/>

                    <button name="action_validate_quotation" string="Valider le devis" type="object" states="submitted"
                            class="btn-primary" groups="sale_crm_extension.group_chef_service_commercial"/>


                    <button name="action_validate_discount" string="Valider la remise"
                            type="object"
                            class="btn-primary" groups="sale_crm_extension.group_chef_service_commercial"
                            attrs="{'invisible':['|',('responsible_discount','=', True),'|',('discount','&lt;=', 5),
                            ('state','in', ['draft','submitted', 'sale', 'discount_validated', 'discount_dcm_validated', 'discount_dga_validated'])]}"/>

                    <button name="%(sale_crm_extension.action_discount_reject_raison_wizard)d"
                            string="Refuser"
                            type="action" states="discount_chef_service_com_validated"
                            class="btn-primary" groups="sale_crm_extension.group_chef_service_commercial"
                    />

                    <button name="action_validate_dcm_discount" string="Valider la remise" type="object"
                            states="discount_dcm_validated"
                            class="btn-primary" groups="sale_crm_extension.group_marketing_director"/>

                    <button name="action_validate_dga_discount" string="Valider la remise" type="object"
                            states="discount_dga_validated"
                            class="btn-primary" groups="sale_crm_extension.group_sub_director"/>

                    <button name="%(sale_crm_extension.action_dcm_discount_reject_raison_wizard)d"
                            string="Refuser"
                            type="action" states="discount_dcm_validated"
                            class="btn-primary" groups="sale_crm_extension.group_marketing_director"/>

                    <button name="%(sale_crm_extension.action_dga_discount_reject_raison_wizard)d"
                            string="Refuser"
                            type="action" states="discount_dga_validated"
                            class="btn-primary" groups="sale_crm_extension.group_sub_director"/>

                    <button name="%(sale_crm_extension.action_quotation_reject_raison_wizard)d"
                            string="Retourner au Commercial"
                            type="action" states="submitted"
                            class="btn-primary" groups="sale_crm_extension.group_chef_service_commercial"/>

                    <button name="action_quotation_send" string="Envoyer par Email" type="object"
                            states="discount_validated"
                            class="btn-primary"/>
                </xpath>

                <button name="action_confirm" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}" position="replace">
                    <button name="action_confirm" string="Confirmer" class="btn-primary"
                            type="object"
                            attrs="{'invisible': ['|',('lead_state', 'in', ('negociation','closing')), ('state', '!=', 'discount_validated')]}"
                            groups="sale_crm_extension.group_chef_service_commercial,sale_crm_extension.group_commercial,sale_crm_extension.group_marketing_director"/>
                </button>


            </field>

        </record>

    </data>
</odoo>
