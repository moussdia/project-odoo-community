<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_country_tree_view" model="ir.ui.view">
			<field name="name">utm.country.tree</field>
			<field name="model">utm.country</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Pays" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
					<field name="region_id" required="1"/>
                    <field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_country_menu" model="ir.actions.act_window">
            <field name="name">Pays</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.country</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Pays
                </p>
            </field>
        </record>

         <menuitem id="utm_country_menu"
                  name="Pays"
                  parent="utm_region_menu"
                  action="action_utm_country_menu"
                  sequence="16"
        />

    </data>
</odoo>
