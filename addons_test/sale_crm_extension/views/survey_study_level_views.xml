<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_study_level_tree_view" model="ir.ui.view">
			<field name="name">utm.study.level.tree</field>
			<field name="model">utm.study.level</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Niveau d'étude" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_study_level_menu" model="ir.actions.act_window">
            <field name="name">Niveau d'étude</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.study.level</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Niveau d'étude
                </p>
            </field>
        </record>

         <menuitem id="utm_study_level_menu"
                  name="Niveau d'étude"
                  parent="survey_configuration_menu"
                  action="action_utm_study_level_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="3"
        />

    </data>
</odoo>
