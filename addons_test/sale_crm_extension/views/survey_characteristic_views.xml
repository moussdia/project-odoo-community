<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_characteristic_tree_view" model="ir.ui.view">
			<field name="name">utm.characteristic.tree</field>
			<field name="model">utm.characteristic</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Caracteristique" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_characteristic_menu" model="ir.actions.act_window">
            <field name="name">Caracteristique</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.characteristic</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Caracteristique
                </p>
            </field>
        </record>

         <menuitem id="utm_characteristic_menu"
                  name="Caracteristique"
                  parent="survey_configuration_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="9"
        />
         <menuitem id="utm_characteristic_under_menu"
                  name="Caracteristique"
                  parent="utm_characteristic_menu"
                  action="action_utm_characteristic_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="1"
        />

    </data>
</odoo>
