<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="survey_template_tree_view" model="ir.ui.view">
			<field name="name">survey.template.tree</field>
			<field name="model">survey.template</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Template" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_survey_template_menu" model="ir.actions.act_window">
            <field name="name">Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">survey.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Template
                </p>
            </field>
        </record>

         <menuitem id="survey_template_menu"
                  name="Template"
                  parent="survey_configuration_menu"
                  action="action_survey_template_menu"
                  groups="sale_crm_extension.group_marketing"
        />

    </data>
</odoo>
