<odoo>
    <data>

        <record model="ir.ui.view" id="mail_activity_form_popup_view">
            <field name="name">mail.activity.form.inherit</field>
            <field name="model">mail.activity</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <field name="stat" widget="statusbar"
                               statusbar_visible="accepted,refused"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='summary']" position="after">
                    <field name="mail_destination"/>
                    <field name="url_link" invisible="1"/>
                    <field name="lead_id" invisible="1"/>
                    <field name="lead_state" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="replace">
                    <field name="date_deadline" invisible="0" string="Date de l'activité" required="1"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="days" string="Jour" invisible="0" required="1"/>
                    <field name="cancel_raison" attrs="{'invisible': [('id', '=', False)]}" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='summary']" position="after">
                    <field name="hours" string="Heure" invisible="0" required="1"/>
                    <field name="modify_raison" string="Raison de mise à jour" attrs="{'invisible': [('id', '=', False)], 'required': [('id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='mail_destination']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="mail_activity_view_form_popup_inherit" model="ir.ui.view">
            <field name="name">mail.activity.view.form.popup.inherits</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_close_dialog']" position="replace">
                    <button string="Planifier" name="action_close_dialog" type="object" class="btn-primary"
                            attrs="{'invisible': [('id', '!=', False)]}"/>
                    <!--<button string="Save" name="action_close_dialog" type="object" class="btn-primary"
                            attrs="{'invisible': [('id', '=', False)]}"/>-->
                </xpath>
            </field>
        </record>

    </data>
</odoo>