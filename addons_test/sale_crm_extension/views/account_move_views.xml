<odoo>
    <data>

        <record id="acoount_move_form_view_form" model="ir.ui.view">
            <field name="name">account.move.inh</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="team_id" readonly="1"/>
                    <field name="user_id" string="Commercial"/>
                    <field name="user_email" string="Email" invisible="1"/>
                    <field name="year_id" readonly="1"/>
                    <field name="period_id"
                           domain="[('year_id', '=', year_id), ('state', '=', 'open')]"
                           options="{'no_create': True, 'no_create_edit':True}" readonly="1"/>
                    <field name="technical_fees" readonly="1"/>
                    <field name="applicable_tsp" readonly="1"/>
                    <field name="technical_fees_ttc" invisible="1"/>
                    <field name="tsp" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='edi_state']" position="after">
                    <field name="wording" readonly="1"/>
                    <field name="fm" readonly="1"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/group" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2">
                        <field name="total_amount_ht" widget="monetary"/>
                        <field name="total_amount_tax" widget="monetary"/>
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="total_amount_ttc"/>
                        </div>
                        <field name="total_amount_ttc" nolabel="1" class="oe_subtotal_footer_separator"
                               widget="monetary"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.inh</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='communication']" position="after">
                    <field name="total_amount_ttc" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
