<odoo>
    <data>

        <record id="survey_out_media_type_form" model="ir.ui.view">
            <field name="name">utm.out.media.type.tree</field>
            <field name="model">utm.out.media.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Type hors média" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="action_survey_out_media_type" model="ir.actions.act_window">
            <field name="name">Type hors média</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.out.media.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer un Type hors média
                </p>
            </field>
        </record>

        <menuitem id="survey_out_media_type_menu"
                  name="Type hors média"
                  parent="survey_configuration_menu"
                  action="action_survey_out_media_type"
                  sequence="3"
        />

    </data>
</odoo>
