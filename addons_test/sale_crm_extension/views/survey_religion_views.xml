<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_religion_tree_view" model="ir.ui.view">
			<field name="name">utm.religion.tree</field>
			<field name="model">utm.religion</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Religion" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_religion_menu" model="ir.actions.act_window">
            <field name="name">Religion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.religion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Religion
                </p>
            </field>
        </record>

         <menuitem id="utm_religion_menu"
                  name="Religion"
                  parent="survey_configuration_menu"
                  action="action_utm_religion_menu"
                  sequence="31"
        />

    </data>
</odoo>
