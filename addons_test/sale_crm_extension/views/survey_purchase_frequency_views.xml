<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_purchase_frequency_tree_view" model="ir.ui.view">
			<field name="name">utm.purchase.frequency.tree</field>
			<field name="model">utm.purchase.frequency</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Fréquence d'achat" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="description"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_purchase_frequency_menu" model="ir.actions.act_window">
            <field name="name">Fréquence d'achat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.purchase.frequency</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Fréquence d'achat
                </p>
            </field>
        </record>

         <menuitem id="utm_purchase_frequency_menu"
                  name="Fréquence d'achat"
                  parent="survey_configuration_menu"
                  action="action_utm_purchase_frequency_menu"
                  sequence="32"
        />

    </data>
</odoo>
