<odoo>
    <data>

        <!-- Inherit Product Template Form View to Modify it -->
        <record id="product_template_view_form" model="ir.ui.view">
            <field name="name">product.template.form.inh</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <label for="name" position="replace">
                    <label string="Nom du produit" for="name"/>
                </label>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="placeholder">Nom du produit</attribute>
                </xpath>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="string">Type de produit</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="string">Catégorie de produit</attribute>
                </xpath>
            </field>
        </record>


        <!-- Inherit Product category Form View to Modify it -->
        <record id="view_product_category_form_inherit" model="ir.ui.view">
            <field name="name">view.product.category.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="type_id" class="oe_inline"/>
                </xpath>

            </field>
        </record>

        <!-- Product category type View to Modify it -->
         <record id="product_category_type_search_view" model="ir.ui.view">
            <field name="name">product.category.search</field>
            <field name="model">product.category.type</field>
            <field name="arch" type="xml">
                <search string="Type de Catégories de Produits">
                    <field name="name" string="Type de catégorie de produit"/>
                    <field name="parent_id"/>
                </search>
            </field>
        </record>

        <record id="product_category_type_form_view" model="ir.ui.view">
            <field name="name">product.category.type.form</field>
            <field name="model">product.category.type</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Nom du type" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Digital"/>
                            </h1>
                        </div>
                        <group name="first" col="2">
                            <field name="parent_id" class="oe_inline"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_category_type_list_view" model="ir.ui.view">
            <field name="name">product.category.type.list</field>
            <field name="model">product.category.type</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Product Categories">
                    <field name="display_name" string="Type de catégorie de produit"/>
                </tree>
            </field>
        </record>
        <record id="product_category_type_action_form" model="ir.actions.act_window">
            <field name="name">Type de catégories d'articles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.category.type</field>
            <field name="search_view_id" ref="product_category_type_search_view"/>
            <field name="view_id" ref="product_category_type_list_view"/>
        </record>


        <!-- Menu Product catgory -->
        <menuitem id="menu_product_category_type"
                  parent="sale.menu_sale_config"
                  sequence="998"
                  name="Type de catégories d'articles"
                  action="product_category_type_action_form"/>


        <!-- Menu Product catgory -->
        <menuitem id="menu_product_category"
                  parent="sale.menu_sale_config"
                  sequence="999"
                  name="Catégories d'articles"
                  action="product.product_category_action_form"/>

    </data>
</odoo>
