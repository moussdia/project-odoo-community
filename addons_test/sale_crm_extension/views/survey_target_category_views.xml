<odoo>
    <data>
    <!--ADD THEME Action Menu Tree view -->
        <record id="utm_target_category_tree_view" model="ir.ui.view">
			<field name="name">utm.target.category.tree</field>
			<field name="model">utm.target.category</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Categorie" editable="bottom" default_order="id desc">
					<field name="name" required="1"/>
                    <field name="target_id" required="1"/>
				</tree>
			</field>
		</record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_utm_target_category_menu" model="ir.actions.act_window">
            <field name="name">Categorie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.target.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Categorie
                </p>
            </field>
        </record>

         <menuitem id="utm_target_category_menu"
                  name="Categorie"
                  parent="utm_target_menu"
                  action="action_utm_target_category_menu"
                  groups="sale_crm_extension.group_marketing"
                  sequence="2"
        />

    </data>
</odoo>
