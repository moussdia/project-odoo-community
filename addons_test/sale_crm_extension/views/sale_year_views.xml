<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!--ADD THEME Action Menu Tree view -->
        <record id="sale_year_tree_view" model="ir.ui.view">
            <field name="name">sale.year.tree</field>
            <field name="model">sale.year</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Exercice commercial" default_order="id desc">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- Action Menu Form view -->
        <record id="sale_year_form_view" model="ir.ui.view">
            <field name="name">sale.year.form</field>
            <field name="model">sale.year</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Exercice commercial" version="7.0" duplicate="0" delete="0">
                    <header>
                        <button name="action_generate_quarterly_periods" states="draft"
                                string="Générer les périodes trimestrielles"
                                type="object" class="oe_highlight"/>

                        <button name="action_generate_monthly_periods" states="draft"
                                string="Générer les périodes mensuelles"
                                type="object" class="oe_highlight"/>

                        <button name="action_generate_goals" string="Générer les objectifs"
                                type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', 'in', ('draft', 'close')),
                                ('appear_button', '=', True)]}"/>

                        <button name="action_close" string="Clôturer"
                                type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', 'in', ('draft', 'close')),
                                ('appear_button', '=', False)]}"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,open,close"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" attrs="{'invisible': ('state', 'draft', 'draft')}">
                            <button class="oe_stat_button" name="goal_view" type="object" icon="fa-bullseye">
                                <field string="Objectifs" name="goal_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="appear_button" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="start_date" required="1"/>
                            </group>
                            <group>
                                <field name="end_date" required="1"/>
                                <field name="current_year" invisible="1"/>
                            </group>
                        </group>
                        <group string="Périodes">
                            <field name="period_ids" nolabel="1" readonly="1">
                                <tree decoration-info="state == 'draft'"
                                      decoration-success="state == 'open'"
                                      decoration-danger="state=='close'">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_sale_year_menu" model="ir.actions.act_window">
            <field name="name">Exercice commercial</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.year</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer votre premier exercice commercial
                </p>
            </field>
        </record>


        <menuitem id="sale_year_principal_menu"
                  name="Objectifs"
                  parent="crm.crm_menu_config"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="sale_year_menu"
                  name="Exercice commercial"
                  parent="sale_year_principal_menu"
                  action="action_sale_year_menu"
                  sequence="1"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

    </data>
</openerp>

