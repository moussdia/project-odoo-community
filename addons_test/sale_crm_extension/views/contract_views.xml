<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--ADD JOB Action Menu Tree view -->
        <record id="sale_contract_tree_view" model="ir.ui.view">
            <field name="name">sale.contract.tree</field>
            <field name="model">sale.contract</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Contrat" delete="false">
                    <field name="order_number"/>
                    <field name="customer_id"/>
                    <field name="order_object"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="order_amount"/>
                </tree>
            </field>
        </record>

        <!-- Action Menu Form view -->
        <record id="sale_contract_form_view" model="ir.ui.view">
            <field name="name">sale.contract.form</field>
            <field name="model">sale.contract</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <form string="Contrat" version="7.0" duplicate="0" >
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_submit_in_progress" type="object" states="draft" string="Valider"
                                class="oe_highlight" id="draft_submit_in_progress"
                                groups="sale_crm_extension.group_head_account"/>

                        <button name="action_submit_in_expired" type="object" states="in_progress" string="Expiré"
                                class="oe_highlight" id="expired_submit"
                                groups="sale_crm_extension.group_head_account"/>

                        <button name="action_submit_in_draft" type="object" states="in_progress" string="Mettre en brouillon"
                                class="oe_highlight" id="draft_submit_in_fraft"
                                groups="sale_crm_extension.group_head_account"/>
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="customer_id" class="oe_edit_only" style="font-weight: bold;"/>
                                <h1>
                                    <field name="customer_id"
                                           domain="[('state','=','done')]"
                                           placeholder="Client" required="1"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}"
                                           options='{"no_create_edit": True}' />
                                </h1>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="order_number" required="1"
                                       domain="[('partner_id','=',customer_id)]"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options='{"no_create_edit": True}'/>
                                <field name="order_amount" required="1" readonly="1"  force_save="1"/>
                                <field name="order_object" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="start_date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="end_date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="alarm_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
			          <field name="message_follower_ids" widget="mail_followers"/>
			          <field name="activity_ids" widget="mail_activity"/>
			          <field name="message_ids" widget="mail_thread" optios="{'post_refresh': 'recipients'}"/>
		          	</div>
                </form>
            </field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <record id="action_sale_contract_menu" model="ir.actions.act_window">
            <field name="name">Contrat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.contract</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer un nouveau contrat
                </p>
            </field>
        </record>


        <menuitem id="sale_contract_menu"
                  name="Contrat"
                  parent="crm.crm_menu_root"
                  action="action_sale_contract_menu"
                  sequence="6"/>




    </data>
</odoo>
