<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_evaluation_search" model="ir.ui.view">
        <field name="name">Charge - Search</field>
        <field name="model">sale.order.evaluation</field>
        <field name="arch" type="xml">
            <search string="Charge Search">
                <field name="name"/>
                <field name="value"/>
            </search>
        </field>
    </record>

    <record id="sale_order_evaluation_tree" model="ir.ui.view">
        <field name="name">sale.order.evaluation.tree</field>
        <field name="model">sale.order.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Evaluation">
                <field name="name"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_evaluation_form" model="ir.ui.view">
        <field name="name">sale.order.evaluation.form</field>
        <field name="model">sale.order.evaluation</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Charge">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_evaluation_action" model="ir.actions.act_window">
        <field name="name">Evaluation</field>
        <field name="res_model">sale.order.evaluation</field>
        <field name="view_id" ref="sale_order_evaluation_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Evaluation
            </p>
            <p>
                Cr√©er les Evaluation
            </p>
        </field>
    </record>

    <menuitem id="menu_sale_order_evaluation"
              parent="sale.menu_sale_config"
              sequence="1001"
              name="Evaluation"
              action="sale_order_evaluation_action"/>



</odoo>
