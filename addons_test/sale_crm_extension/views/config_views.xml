<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Taille l'entreprise -->
        <record id="create_enterprise_size_tree" model="ir.ui.view">
            <field name="name">enterprise.size.tree</field>
            <field name="model">enterprise.size</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Taille l'entreprise" editable="bottom">
                    <field name="name" required="1" on_change="onchange_case(name)"/>
                </tree>
            </field>
        </record>

        <record id="action_create_enterprise_size" model="ir.actions.act_window">
            <field name="name">Taille de l'entreprise</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">enterprise.size</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Ajouter une taille d'entreprise
                </p>
            </field>
        </record>

        <!-- Forme juridique -->
        <record id="create_forme_juridique_tree" model="ir.ui.view">
            <field name="name">forme.juridique.tree</field>
            <field name="model">forme.juridique</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Forme juridique" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_create_forme_juridique" model="ir.actions.act_window">
            <field name="name">Forme juridique</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">forme.juridique</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Ajouter une forme juridique
                </p>
            </field>
        </record>

        <!--Origine du deal-->
        <record id="create_deal_origin_tree" model="ir.ui.view">
            <field name="name">deal.origin.tree</field>
            <field name="model">deal.origin</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Origine du deal" editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_deal_origin" model="ir.actions.act_window">
            <field name="name">Origine du deal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">deal.origin</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Origine du deal
                </p>
            </field>
        </record>

        <!-- Secteur d’activité -->
        <record id="create_deal_activity_sector" model="ir.ui.view">
            <field name="name">activity.sector.tree</field>
            <field name="model">activity.sector</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Secteur d’activité" editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_activity_sector" model="ir.actions.act_window">
            <field name="name">Secteur d’activité</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">activity.sector</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Secteur d’activité
                </p>
            </field>
        </record>

        <!--Zone géographique-->
        <record id="create_deal_localization_zone" model="ir.ui.view">
            <field name="name">localization.zone.tree</field>
            <field name="model">localization.zone</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Zone géographique" editable="bottom">
                    <field name="zone" required="1"/>
                    <field name="city" required="1"/>
                    <field name="country_id" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_localization_zone" model="ir.actions.act_window">
            <field name="name">Zone géographique</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">localization.zone</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Zone géographique
                </p>
            </field>
        </record>

        <!-- Activité principale -->
        <record id="create_principal_activity" model="ir.ui.view">
            <field name="name">principal.activity.tree</field>
            <field name="model">principal.activity</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Secteur d’activité" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="full_name" required="1"/>
                    <field name="active" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_principal_activity" model="ir.actions.act_window">
            <field name="name">Activité principale</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">principal.activity</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Activité principale
                </p>
            </field>
        </record>

        <!-- Activité principale -->
        <record id="create_res_partner_group" model="ir.ui.view">
            <field name="name">res.partner.group.tree</field>
            <field name="model">res.partner.group</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Groupe de sociétés" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="active" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_res_partner_group" model="ir.actions.act_window">
            <field name="name">Groupe de sociétés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.group</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Groupe de sociétés
                </p>
            </field>
        </record>

        <!-- Métier -->
        <record id="create_res_crm_job" model="ir.ui.view">
            <field name="name">crm.job.tree</field>
            <field name="model">crm.job</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Métier" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="description" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_crm_job" model="ir.actions.act_window">
            <field name="name">Métier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.job</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer un métier
                </p>
            </field>
        </record>

        <!-- Palan de maillage -->
        <record id="create_res_mesh_plan" model="ir.ui.view">
            <field name="name">mesh.plan.tree</field>
            <field name="model">mesh.plan</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Plan de maillage" editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_mesh_plan" model="ir.actions.act_window">
            <field name="name">Plan de maillage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mesh.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer un Plan de maillage
                </p>
            </field>
        </record>

        <!-- Palan de maillage -->
        <record id="create_res_charge_exploitation" model="ir.ui.view">
            <field name="name">charge.exploitation.nature.tree</field>
            <field name="model">charge.exploitation.nature</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="charge d'exploitation" editable="bottom">
                    <field name="nature" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_create_charge_exploitation" model="ir.actions.act_window">
            <field name="name">charge d'exploitation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">charge.exploitation.nature</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Créer une charge d'exploitation
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="config_create_enterprise_size"
                  name="Tailles d'entreprise"
                  parent="crm.crm_menu_config"
                  action="action_create_enterprise_size"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="config_create_forme_juridique"
                  name="Formes juridiques"
                  parent="crm.crm_menu_config"
                  action="action_create_forme_juridique"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="config_create_activity_sector"
                  name="Secteurs d’activité"
                  parent="crm.crm_menu_config"
                  action="base.res_partner_industry_action"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="menu_create_principal_activity"
                  name="Activités principales"
                  parent="crm.crm_menu_config"
                  action="action_create_principal_activity"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="config_create_localization_zone"
                  name="Zones géographiques"
                  parent="crm.crm_menu_config"
                  action="action_create_localization_zone"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="menu_create_res_partner_group"
                  name="Groupe d'entreprises"
                  parent="crm.crm_menu_config"
                  action="action_create_res_partner_group"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="menu_create_crm_job"
                  name="Métiers"
                  parent="crm.crm_menu_config"
                  action="action_create_crm_job"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="config_create_mesh_plan"
                  name="Types de plan de maillage"
                  parent="crm.crm_menu_config"
                  action="action_create_mesh_plan"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

        <menuitem id="config_create_charge_d'exploitation"
                  name="Natures de charges d'exploitation"
                  parent="crm.crm_menu_config"
                  action="action_create_charge_exploitation"
                  groups="sale_crm_extension.group_chef_service_commercial"/>

    </data>
</odoo>
