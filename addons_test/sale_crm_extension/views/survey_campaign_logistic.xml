<odoo>
    <data>

          <!-- Palan de maillage -->
        <record id="utm_marketing_logistic_form" model="ir.ui.view">
            <field name="name">utm.campaign.logistic.tree</field>
            <field name="model">utm.campaign.logistic</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Logistique" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_utm_marketing_logistic" model="ir.actions.act_window">
            <field name="name">Logistique</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.campaign.logistic</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Cr√©er une logistique
                </p>
            </field>
        </record>

        <menuitem id="utm_marketing_logistic_menu"
                  name="Logistique"
                  parent="survey_configuration_menu"
                  action="action_utm_marketing_logistic"
                  groups="sale_crm_extension.group_marketing"
        />

    </data>
</odoo>
