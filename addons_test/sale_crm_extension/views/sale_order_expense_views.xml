<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_expense_search" model="ir.ui.view">
        <field name="name">Charge - Search</field>
        <field name="model">sale.order.expense</field>
        <field name="arch" type="xml">
            <search string="Charge Search">
                <field name="name"/>
                <field name="amount"/>
            </search>
        </field>
    </record>

    <record id="sale_order_expense_tree" model="ir.ui.view">
        <field name="name">sale.order.expense.tree</field>
        <field name="model">sale.order.expense</field>
        <field name="arch" type="xml">
            <tree string="Charges">
                <field name="name"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_expense_form" model="ir.ui.view">
        <field name="name">sale.order.expense.form</field>
        <field name="model">sale.order.expense</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Charge">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_expense_action" model="ir.actions.act_window">
        <field name="name">Charges</field>
        <field name="res_model">sale.order.expense</field>
        <field name="view_id" ref="sale_order_expense_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Charges
            </p>
            <p>
                Cr√©er les charges
            </p>
        </field>
    </record>

    <menuitem id="menu_sale_order_expense"
              parent="sale.menu_sale_config"
              sequence="1000"
              name="Charges d'exploitation"
              action="sale_order_expense_action"/>

</odoo>
