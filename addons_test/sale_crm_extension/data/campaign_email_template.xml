<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="campaign_done_send_mail" model="mail.template">
            <field name="name">Notification de fin de campagne</field>
            <field name="email_from">${(user.login or'')|safe }</field>
            <field name="email_to">${(object.recipients_mails or '')|safe}</field>
            <field name="subject">Notification de fin de campagne ${object.name}</field>
            <field name="model_id" ref="model_survey_campaign"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Cher Mr/Mme,</p>
                        <p>Vous venez de recevoir une notification de fin de campagne de <strong>${object.campaign_type}.</strong>
                            Veuillez mener les actions qui vous imcombent.!!!
                        </p>
                        <br/>
                        <br/>
                        <div style="width: 375px; margin: 0px; padding: 0px; background-color: #6B8E23; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
                            <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
                                <strong style="text-transform:uppercase;">Informations de la campane</strong>
                            </h3>
                        </div>
                        <div style="width: 375px; margin: 0px; padding: 0px; background-color: #cdcecc; background-repeat: repeat no-repeat;">
                            <span style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #000000;">
                                <p style="margin-left: 10px;"><b>Type de campagne :</b>${object.campaign_type}
                                </p>
                                <p style="margin-left: 10px;"><b>Nom de la campagne :</b>${object.name}
                                </p>
                            </span>
                        </div>
                        <br/>
                        <p>Veuillez cliquer <a href="${object.url_link}">ici</a> pour y acc√©der
                        </p>
                        <br/>
                        <br/>
                        <p>Cordialement!!!</p>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
