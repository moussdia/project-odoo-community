<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template validation customer -->
        <record id="sale_crm_extension_send_mail_tour_plan" model="mail.template">
            <field name="name">Tour plan</field>
            <field name="model_id" ref="sale_crm_extension.model_mail_activity"/>
            <field name="email_from">${(user.email or'')|safe }</field>
            <field name="email_to">${(object.mail_followers_plan_tour or '')|safe}</field>
            <field name="subject">Plan de tournée</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Cher Mr/Mme,</p>
                        <p>Le Plan de tournée
                        </p>
                        <br/>
                        <br/>
                        <div style="width: 375px; margin: 0px; padding: 0px; background-color: #6B8E23; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
                            <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
                                <strong style="text-transform:uppercase;"></strong>
                            </h3>
                        </div>
                        <br/>
                        <p>Cordialement!!!</p>
                    </p>
                </div>
            </field>
<!--            <field name="report_template" ref="action_tour_plan"/>-->
            <field name="report_name">Plan de tournée</field>
        </record>

    </data>
</odoo>
