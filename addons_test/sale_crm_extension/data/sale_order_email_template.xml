<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_quotation_send_mail" model="mail.template">
            <field name="name">Notification de nouvau devis</field>
            <field name="email_from">${(user.login or'')|safe }</field>
            <field name="email_to">${(object.recipients_mails or '')|safe}</field>
            <field name="subject">Notification de nouvau devis ${object.name}</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Cher Mr/Mme,</p>
                        <p>Vous venez de recevoir une demande de validation de devis
                            <strong>${object.name}.</strong>
                            Veuillez mener les actions qui vous imcombent.!!!
                        </p>
                        <br/>
                        <br/>
                        <div style="width: 375px; margin: 0px; padding: 0px; background-color: #6B8E23; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
                            <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
                                <strong style="text-transform:uppercase;">Informations du devis</strong>
                            </h3>
                        </div>
                        <div style="width: 375px; margin: 0px; padding: 0px; background-color: #cdcecc; background-repeat: repeat no-repeat;">
                            <span style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #000000;">
                                <p style="margin-left: 10px;"><b>Devis :</b>${object.name}
                                </p>
                                <p style="margin-left: 10px;"><b>client :</b>${object.partner_id.name}
                                </p>
                                <p style="margin-left: 10px;"><b>Commercial :</b>${object.user_id.name}
                                </p>
                            </span>
                        </div>
                        <br/>
                        <p>Veuillez cliquer <a href="${object.url_link}">ici</a> pour y accéder
                        </p>
                        <br/>
                        <br/>
                        <p>Cordialement!!!</p>
                    </p>
                </div>
            </field>
        </record>

        <record id="sale_order_quotation_template" model="mail.template">
            <field name="name">Template de devis</field>
            <field name="email_from">${(user.login or'')|safe }</field>
            <field name="email_to">${(object.recipients_mails or '')|safe}</field>
            <field name="subject">Notification de nouvau devis ${object.name}</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Bonjour,</p>
                        <br/>
                        <p>Votre devis N° <strong>${object.name}</strong> d'un montant de <strong>
                            ${object.total_amount_ttc} FCFA
                        </strong> est prêt pour validation.
                        </p>
                        <br/>
                        <p>N'hésitez pas à nous contacter si vous avez des questions..
                        </p>
                        <br/>
                        <p>Cordialement!!!</p>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
