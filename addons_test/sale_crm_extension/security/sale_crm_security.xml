<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Direction -->
        <record model="ir.module.category" id="module_access_direction">
            <field name="name">Direction Générale</field>
            <field name="description">Habilitations des utilisateurs du groupe Direction</field>
            <field name="sequence">3</field>
        </record>

        <record id="group_director" model="res.groups">
            <field name="name">Directeur Général</field>
            <field name="category_id" ref="module_access_direction"/>
            <field name="sequence">1</field>
        </record>

        <record id="group_sub_director" model="res.groups">
            <field name="name">Directeur Général Adjoint</field>
            <field name="category_id" ref="module_access_direction"/>
            <field name="sequence">2</field>
        </record>

        <!-- CRM & Ventes -->
        <record model="ir.module.category" id="module_access_sale_crm">
            <field name="name">Direction Commerciale et Marketing</field>
            <field name="description">Habilitations des utilisateurs du groupe CRM &#38; Ventes</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_commercial" model="res.groups">
            <field name="name">Commercial</field>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="sequence">6</field>
        </record>

        <record id="group_chef_service_commercial" model="res.groups">
            <field name="name">Chef de Service Commercial</field>
            <field name="implied_ids"
                   eval="[(4, ref('group_commercial')),(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="sequence">3</field>
        </record>

        <record id="group_marketing_director" model="res.groups">
            <field name="name">Directeur Commercial &#38; Marketing</field>
            <field name="implied_ids"
                   eval="[(4, ref('group_chef_service_commercial')),(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="sequence">1</field>
        </record>

        <record id="group_dministration_vente" model="res.groups">
            <field name="name">Agent Administration des Ventes</field>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="sequence">5</field>
        </record>

        <record id="group_chef_service_administration_vente" model="res.groups">
            <field name="name">Chef de Service Administration des Ventes</field>
            <field name="implied_ids" eval="[(4, ref('group_dministration_vente'))]"/>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="sequence">2</field>
        </record>

        <record id="group_marketing" model="res.groups">
            <field name="name">Agent Marketing</field>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="sequence">7</field>
        </record>

        <record id="group_chef_service_marketing" model="res.groups">
            <field name="name">Chef de service Marketing</field>
            <field name="implied_ids"
                   eval="[(4, ref('group_marketing'))]"/>
            <field name="category_id" ref="module_access_sale_crm"/>
            <field name="sequence">4</field>
        </record>

        <!-- Finances -->
        <record model="ir.module.category" id="module_access_finances">
            <field name="name">Direction Administrative et Financière</field>
            <field name="description">Habilitations des utilisateurs du groupe Finances</field>
            <field name="sequence">5</field>
        </record>

        <record id="group_financial_director" model="res.groups">
            <field name="name">Directeur Administratif et financier</field>
            <field name="category_id" ref="module_access_finances"/>
            <field name="sequence">1</field>
        </record>

        <record id="group_head_account_payement" model="res.groups">
            <field name="name">Chef d’Administration et de la Paie</field>
            <field name="category_id" ref="module_access_finances"/>
            <field name="sequence">2</field>
        </record>

        <record id="group_head_account" model="res.groups">
            <field name="name">Chef Comptable</field>
            <field name="category_id" ref="module_access_finances"/>
            <field name="sequence">3</field>
        </record>

        <record id='group_category' model='ir.module.category'>
            <field name='name'>Direction des Systèmes d'Information</field>
            <field name="sequence">6</field>
        </record>

        <record id="group_systeme_information_director" model="res.groups">
            <field name="name">Directeur des Systèmes d'Information</field>
            <field name="category_id" ref="group_category"/>
            <field name="sequence">1</field>
        </record>

        <record id="group_chef_service_systeme_information" model="res.groups">
            <field name="name">Chef de Service Système d'Information</field>
            <field name="category_id" ref="group_category"/>
            <field name="sequence">2</field>
        </record>

        <record id="group_systeme_information" model="res.groups">
            <field name="name">Agent Système d'Information</field>
            <field name="category_id" ref="group_category"/>
            <field name="sequence">3</field>
        </record>

        <record model='ir.ui.menu' id='survey.survey_menu_user_inputs'>
            <field name="groups_id" eval="[(6,0, [ref('sale_crm_extension.group_chef_service_marketing')])]"/>
        </record>

        <record model='ir.ui.menu' id='survey.survey_menu_questions'>
            <field name="groups_id" eval="[(6,0, [ref('sale_crm_extension.group_chef_service_marketing')])]"/>
        </record>

        <!--<record model='ir.ui.menu' id='survey.menu_survey_form'>
            <field name="groups_id" eval="[(6,0, [ref('sale_crm_extension.group_chef_service_commercial')])]"/>
        </record>-->

        <record model='ir.ui.menu' id='survey.menu_survey_form'>
            <field name="groups_id" eval="[(5,0, [ref('sale_crm_extension.group_marketing')])]"/>
        </record>

    </data>
</odoo>
