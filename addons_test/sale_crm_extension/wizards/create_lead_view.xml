<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="create_lead_wizard" model="ir.ui.view">
            <field name="name">create.lead.wizards</field>
            <field name="model">create.lead</field>
            <field name="arch" type="xml">
                <form string="Fournir les suspects aux commeriaux">
                    <notebook colspan="4">
                        <page string="Suspects">
                            <group>
                                <field name="suspect_ids" nolabel="1"/>
                                <!--<field name="suspect_ids" domain="[('campaign_id','=', campaign_id),('suspect_attributed','=','no')]" nolabel="1"/>-->
                            </group>
                        </page>
                        <page string="Affectation">
                            <group>
                                <group>
                                    <field name="commercial_team_id" string="Equipe commerciale" required="1"/>
                                    <field name="commercial_id" string="Commerciale" required="1"/>
                                    <field name="survey_campaign_id" invisible="1"/>
                                    <field name="survey_study_id" invisible="1"/>
                                    <field name="marketing_name" invisible="1"/>
                                    <field name="study_name" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_create_lead" string="Attribuer" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Annuler" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_create_lead_wizard" model="ir.actions.act_window">
            <field name="name">Cr√©er un lead</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.lead</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>

