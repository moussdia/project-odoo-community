<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="update_wizard_wizard" model="ir.ui.view">
            <field name="name">update.wizard.wizards</field>
            <field name="model">update.wizard</field>
            <field name="arch" type="xml">
                <form string="Mise à jour">
                    <notebook colspan="4">
                        <page string="Affectation">
                            <group>
                                <field name="ref_update_ids" nolabel="1">
                                    <tree>
                                        <field name="ref"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_update" string="Mettre à jour" type="object" class="oe_highlight"/>
                        <button name="action_update_product" string="Mettre à jour les produits" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Annuler" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_update_wizard" model="ir.actions.act_window">
            <field name="name">Créer un lead</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>

