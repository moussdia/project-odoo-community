<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="create_utm_sales_volume_wizard" model="ir.ui.view">
            <field name="name">utm.sales.volume.wizards</field>
            <field name="model">utm.sales.volume.wizard</field>
            <field name="arch" type="xml">
                <form string="Volume des ventes">
                    <group string="Volume des ventes">
                        <field name="indicators" string="Indicateurs de suivi"/>
                    </group>
                    <footer>
                        <button name="action_sales_volume_print" string="Imprimer"
                                type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_utm_sales_volume_report_menu" model="ir.actions.act_window">
            <field name="name">Suivi des indicateurs sp√©cifiques au marketing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">utm.sales.volume.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="utm_sales_volume_report_menu"
                  name="Volume des ventes"
                  parent="utm_campaign_report_menu"
                  action="action_utm_sales_volume_report_menu"/>
    </data>
</odoo>
