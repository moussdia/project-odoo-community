<odoo>
    <data>
        <record id="hr_employee_form_view_form" model="ir.ui.view">
            <field name="name">hr.employee.inh</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="department_id" position="attributes">
                    <attribute name="string">Direction</attribute>
                </field>
                <field name="department_id" position="after">
                    <field name="name_name">Direction</field>
                </field>
                <label for="department_id" position="replace">
                    <label string="Direction" for="department_id"/>
                </label>
            </field>
        </record>
    </data>
</odoo>
